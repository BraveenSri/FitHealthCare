<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.braveen.fit_health_app.SetTargetPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:background="@drawable/silver_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/SetTargetPageTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:fontFamily="@font/footlightmtlight"
                    android:textStyle="bold"
                    android:text="Fitness Goals"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#0f0582"
                    android:textSize="40dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="Current Weight"
                        android:textSize="22dp"
                        android:textColor="#000"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/CurrentWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_marginLeft="200dp"
                        android:fontFamily="@font/calibri"
                        android:text="Val"
                        android:textSize="22dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="Goal Weight"
                        android:textSize="22dp"
                        android:textColor="#000"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:id="@+id/GoalWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_marginLeft="200dp"
                        android:fontFamily="@font/calibri"
                        android:hint="Val"
                        android:textSize="22dp"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:textColorHint="#666"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:fontFamily="@font/calibri"
                        android:text="How healthy is your diet?"
                        android:textSize="21dp"
                        android:textColor="#000"/>

                    <Spinner
                        android:id="@+id/Diet"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_marginLeft="245dp"
                        android:fontFamily="@font/calibri"
                        style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                        android:layout_centerVertical="true"
                        android:textAlignment="center">

                    </Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/AwfulImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/awful"/>

                    <ImageView
                        android:id="@+id/BadImg"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="72dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/bad"/>

                    <ImageView
                        android:id="@+id/OkImg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ok"/>

                    <ImageView
                        android:id="@+id/GoodImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="72dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/good"/>

                    <ImageView
                        android:id="@+id/GreatImg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/great"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/calibri"
                        android:text="Awful"
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="72dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/calibri"
                        android:text="Bad"
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/calibri"
                        android:text="Ok"
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="72dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/calibri"
                        android:text="Good"
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/calibri"
                        android:text="Great"
                        android:textSize="17dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/CalculateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_background"
                    android:fontFamily="@font/segoepr"
                    android:textSize="20dp"
                    android:text="Calculate the expected period"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:clickable="true"
                    android:layout_marginTop="25dp"
                    android:onClick="CalculatePeriod"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/calibri"
                        android:text="Expected Period (in days)"
                        android:textSize="22dp"
                        android:textColor="#000"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/ExpectedPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:layout_marginLeft="250dp"
                        android:fontFamily="@font/calibri"
                        android:text="0"
                        android:textSize="22dp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
